
var container = document.querySelector(".container");

<% if @booking.status == "order-confirmed" %>
  if (container.id != "order-confirmed") {
    document.querySelector(".add-margin-bottom").innerHTML = "<%= j render 'order-confirmed' %>";
  }
<% elsif @booking.status == "driver-confirmed" %>
  if (container.id != "driver-confirmed") {
    document.querySelector(".add-margin-bottom").innerHTML = "<%= j render 'driver-confirmed' %>";
  }
<% elsif @booking.status == "pick-confirmed" %>
  if (container.id != "pick-confirmed") {
    document.querySelector(".add-margin-bottom").innerHTML = "<%= j render 'pick-confirmed' %>";
  }
<% end %>
