<div>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  </div>
  <div class="booking-new">
    <div class="row" style="text-align: center;">
      <div class="header-text col-9" style="margin: 25px auto;">
        <h1>Night Roulette</h1>
        <p>Select you filters and spin the wheel</p>

        <p>Please confirm this is your current location</p>


        <div class="booking-form">
          <%= simple_form_for @booking do |f| %>
              <!-- TODO change this button into the wheel and add javascript -->
            <%= f.button :submit, "SPIN THE WHEEL" %>
              <!-- This is our 3 booking filters -->
            <div>
              <%=  f.collection_radio_buttons :venue_types, [['restaurant', 'Restaurant'],
              ['bar', 'Bar'], ['nightclub', 'Nightclub'] ], :first, :last, {:item_wrapper_class => 'foo-bar'} %>

            </div>
              <!-- This is our guest counts -->
            <div class="container-passengers">
                <button type="button" onclick="decreasePassengerAmount()" class="plus">-</button>
                <%= f.input :passengers, classes: 'passenger-amount', label: 'Passengers Count', input_html: {value: '1', disabled: true} %>
                <button type="button" onclick="increasePassengerAmount()" class="plus">+</button>
            </div>

          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>

