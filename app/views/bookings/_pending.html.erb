<div class="container">
   <div class="row ct-section_header ct-section_header--type2"></div>
   <div class="row trip-details">
    <!-- <div class="venue-details col-9" style="background: url(<%#= image_url('bar1.jpg') %>;"> -->
      <div class="venue-details col-9">
         <h1> Congrats! </h1>
         <p> We've found the perfect <%= @venue.venue_type %>  for you!</p> </br>
         <h2> Cool facts: </h2>
         <% @facts.each do |fact| %>
            <p><li> <%= fact %> </li></p>
         <% end %>
         </br>
         <div class=" star-rating">
          <%= render 'stars' %>
         </div>
         <div class="pricing-details">
            <%= render 'pricing' %>
         </div>
         <p class="hours">Open until <%= @venue.hours %></p>
         <p class="hours">Want us to order you a taxi? Tell us where you are and how many people are joining!</p>
         <div style="border: 1px solid white; padding: 2px;">
           <%= simple_form_for [@booking] do |f| %>
            <%= f.input :pickup_location %>

            <%= f.submit "order a taxi", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>

      <button type="button" class="btn share-button" data-toggle="modal" data-target="#rating-modal">
         Rate this venue
      </button>
      <button type="button" class="btn share-button" data-toggle="modal" data-target="#car-order-modal">
         Order a car this venue
      </button>
      <%# <div class="btn share-button">Share with your friends</div> %>
   </div>

</div>
